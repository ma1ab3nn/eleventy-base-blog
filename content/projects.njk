<h2>My GitHub</h2>
<br><br>

    <!-- My github status-->
    <div class="content-container">
    <p>I recently completed a web development bootcamp with Codersguild. It consisted of 16 lessons with different exercises per lesson. I created a separate repo for each lesson. 
    You can have a peruse below at my repos and link off to GitHub to view them. </p>
    <img src="https://github-readme-stats.vercel.app/api?username=ma1ab3nn" alt="Your Name's GitHub stats" class="github-stats" />
    </div>

    <br>

    <!-- My github repos-->
    <div id="repos"></div>

    <script>
        const username = 'ma1ab3nn';
        const url = `https://api.github.com/users/${username}/repos`;

        fetch(url)
        .then(response => response.json())
        .then(data => {
            const repoContainer = document.getElementById('repos');
            data.forEach(repo => {
                const repoDiv = document.createElement('div');
                repoDiv.classList.add('repo');
                repoDiv.innerHTML = `
                    <h2><a href="${repo.html_url}" target="_blank">${repo.name}</a></h2>
                    <p>${repo.description ? repo.description : 'No description available'}</p>
                    <div class="meta">
                        <span><i class="fas fa-calendar-alt"></i> Updated ${new Date(repo.updated_at).toLocaleDateString()}</span>
                    </div>
                `;
                repoContainer.appendChild(repoDiv);
            });
        })
        .catch(error => console.error('Error fetching repos:', error));
    </script>