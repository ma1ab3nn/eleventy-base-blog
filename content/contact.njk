<h2>Ask me anything, via this form:</h2>
<br><br>

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
  <form>
    <div class="form-group">
      <label for="firstName">Your First Name</label>
      <input type="text" class="form-control" id="firstName" placeholder="First name">
    </div>
    <div class="form-group">
      <label for="secondName">Your Second Name</label>
      <input type="text" class="form-control" id="secondName" placeholder="Second name">
    </div>
    <div class="form-group">
      <label for="email">Your Email address</label>
      <input type="email" class="form-control" id="email" placeholder="name@example.com">
    </div>
    <div class="form-group">
      <label for="message">Message</label>
      <textarea class="form-control" id="message" rows="3" placeholder="Type your message here"></textarea>
    </div>
    <button class="btn btn-lg btn-primary" type="submit">Submit</button>
  </form>
</div>
